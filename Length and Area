import java.util.Scanner;

public class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n1=sc.nextInt();
        int n2=sc.nextInt();
        System.out.println("The required length is "+(2*(n1+n2))+" m");
        System.out.println("The required area of carpet is "+(n1*n2)+" sqm");
    }
}
